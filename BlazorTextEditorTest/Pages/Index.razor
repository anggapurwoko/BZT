@using Blazored.TextEditor
@page "/"

<h1>Hello, world!</h1>
<button class="btn btn-primary" @onclick="@OpenDialog">Edit</button>

Your Text
<textarea @bind="_notes" class="form-control"></textarea>

@if (_showDialog)
{
    <div class="modal fade show" style="display:block; z-index: 3001;" aria-modal="true" role="dialog">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Holds</h4>
                    <button type="button" class="close" @onclick="@CloseDialogAsync">&times;</button>
                </div>
                <div class="modal-body">

                    <BlazoredTextEditor @ref="@noteTextEditor" DebugLevel="error">
                        <ToolbarContent>
                            <select class="ql-header">
                                <option selected=""></option>
                                <option value="1"></option>
                                <option value="2"></option>
                                <option value="3"></option>
                                <option value="4"></option>
                                <option value="5"></option>
                            </select>
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                                <button class="ql-strike"></button>
                            </span>

                        </ToolbarContent>
                        <EditorContent>
                            @((MarkupString)_notes)
                        </EditorContent>
                    </BlazoredTextEditor>

                </div>

            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
    <div class="modal-backdrop fade show" style="z-index: 3000;"></div>

}

